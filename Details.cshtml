@model ClientAdmin.Models.Cliente
<h1 class="h3 mb-3">Detalhes do Cliente</h1>
<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">CPF</dt>
            <dd class="col-sm-9">@Model.CPF</dd>

            <dt class="col-sm-3">Data de Nascimento</dt>
            <dd class="col-sm-9">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Data de Cadastro</dt>
            <dd class="col-sm-9">@Model.DataCadastro.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Renda Familiar</dt>
            <dd class="col-sm-9">@(Model.RendaFamiliar.HasValue ? ("R$ " + Model.RendaFamiliar.Value.ToString("N2", new System.Globalization.CultureInfo("pt-BR"))) : "-")</dd>
        </dl>
        <div class="mt-3">
            <a class="btn btn-outline-secondary" href="/Clients/Edit/@Model.Id">Editar</a>
            <a class="btn btn-secondary" href="/Clients">Voltar</a>
        </div>
    </div>
</div>
