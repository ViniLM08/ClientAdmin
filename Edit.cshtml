@model ClientAdmin.Models.Cliente
<h1 class="h3 mb-3">Editar Cliente</h1>
<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />
    <div class="row g-3">
        <div class="col-12">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" maxlength="150" required />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="CPF" class="form-label"></label>
            <input asp-for="CPF" class="form-control" inputmode="numeric" pattern=^\d{11}$/>
            <span asp-validation-for="CPF" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="DataNascimento" class="form-label"></label>
            <input asp-for="DataNascimento" class="form-control" type="date" max="@DateTime.Today.ToString("yyyy-MM-dd")" required />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="DataCadastro" class="form-label"></label>
            <input asp-for="DataCadastro" class="form-control" type="date" readonly />
        </div>
        <div class="col-md-6">
            <label asp-for="RendaFamiliar" class="form-label"></label>
            <input asp-for="RendaFamiliar" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="RendaFamiliar" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-success">Salvar</button>
        <a class="btn btn-secondary" href="/Clients">Cancelar</a>
    </div>
</form>
